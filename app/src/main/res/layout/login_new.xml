<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background_color1">

    <ScrollView
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_gravity="center"
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="none">

        <LinearLayout
            android:id="@+id/login_with_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="@dimen/margin_10dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/ll_userInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/margin_20dp">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website URL" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/url_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:hint="http://woocom.endix.net"
                    android:inputType="text"
                    android:padding="@dimen/margin_10dp" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="API Key" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:hint="API Key"
                    android:inputType="text"
                    android:padding="@dimen/margin_10dp" />

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="API Secret" />

                <EditText
                    android:textColor="@color/black"
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:hint="API Secret"
                    android:inputType="text"
                    android:padding="@dimen/margin_10dp" />

                <Button
                    android:id="@+id/scan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@drawable/button_background_fill"
                    android:text="Scan QR code"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:background="@drawable/button_background_fill"
                    android:text="Log-in"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
            <!--<TextView-->
                <!--android:id="@+id/tv_admin_login"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginBottom="@dimen/margin_10dp"-->
                <!--android:text="@string/admin_login"-->
                <!--android:textColor="@color/colorPrimaryDark"-->
                <!--android:textSize="14sp"-->
                <!--android:visibility="visible" />-->
        </LinearLayout>
    </ScrollView>


</LinearLayout>
