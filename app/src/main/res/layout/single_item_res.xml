<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin_half"
                app:cardBackgroundColor="@color/placeholder_grey"
                app:cardCornerRadius="3dp"
                app:cardPreventCornerOverlap="false">

                <ProgressBar
                    android:id="@+id/movie_progress"
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="@dimen/activity_margin"
                    android:layout_height="@dimen/activity_margin"
                    android:layout_gravity="center"
                    android:theme="@style/CircularProgress" />

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="72dp"
                    android:layout_height="90dp"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/sample" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_margin_half">

                <!--<TextView-->
                <!--android:id="@+id/movie_year"-->
                <!--style="@style/TextAppearance.AppCompat.Caption"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/activity_margin_content"-->
                <!--android:layout_marginStart="@dimen/activity_margin_content"-->
                <!--android:alpha="0.38"-->
                <!--android:gravity="end"-->
                <!--android:maxLines="1"-->
                <!--android:textStyle="bold"-->
                <!--tools:text="2009 | EN" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pd_name"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_quarter"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:text="Pizza" />

                        <TextView
                            android:id="@+id/quantity"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_quarter"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            tools:text="Total item 10" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/orderTitle"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/activity_margin_quarter"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:paddingRight="@dimen/size_10dp"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:text="Movie Title" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Accept" />

                    <TextView
                        android:id="@+id/reject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/size_10dp"
                        android:text="Reject" />

                </RelativeLayout>

                <!--<TextView-->
                <!--android:id="@+id/movie_desc"-->
                <!--style="@style/TextAppearance.AppCompat.Caption"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/activity_margin_content"-->
                <!--android:layout_marginStart="@dimen/activity_margin_content"-->
                <!--android:layout_marginTop="@dimen/activity_margin_half"-->
                <!--android:ellipsize="end"-->
                <!--android:maxLines="2"-->
                <!--android:textColor="@color/black"-->
                <!--tools:text="Nowadays, user engagement is considered one of the most important metrics for the success of your app" />-->

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>