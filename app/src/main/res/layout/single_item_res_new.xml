<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="@dimen/size_5dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:padding="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/placeholder_grey"
                    app:cardCornerRadius="3dp"
                    app:cardPreventCornerOverlap="false">

                    <ProgressBar
                        android:id="@+id/movie_progress"
                        style="@style/Widget.AppCompat.ProgressBar"
                        android:layout_width="@dimen/activity_margin"
                        android:layout_height="@dimen/activity_margin"
                        android:layout_gravity="center"
                        android:theme="@style/CircularProgress" />

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/back" />
                    <TextView
                        android:textColor="@color/primary"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pending"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"

                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_margin_half">

                <!--<TextView-->
                <!--android:id="@+id/movie_year"-->
                <!--style="@style/TextAppearance.AppCompat.Caption"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/activity_margin_content"-->
                <!--android:layout_marginStart="@dimen/activity_margin_content"-->
                <!--android:alpha="0.38"-->
                <!--android:gravity="end"-->
                <!--android:maxLines="1"-->
                <!--android:textStyle="bold"-->
                <!--tools:text="2009 | EN" />-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/margin_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!--<TextView-->
                        <!--android:id="@+id/pd_name"-->
                        <!--style="@style/TextAppearance.AppCompat.Subhead"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/activity_margin_quarter"-->
                        <!--android:maxLines="2"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:textStyle="bold"-->
                        <!--tools:text="Pizza" />-->
                        <TextView
                            android:id="@+id/pd_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:maxLines="2"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size19"
                            tools:text="Pizza" />

                        <TextView
                            android:id="@+id/quantity"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_quarter"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            tools:text="Total item 10" />

                        <TextView
                            android:id="@+id/totalPay"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_margin_quarter"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            tools:text="Total pay 10 Tk" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/orderTitle"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/activity_margin_quarter"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:paddingRight="@dimen/size_10dp"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        tools:text="Movie Title" />


                </LinearLayout>




                <!--<TextView-->
                <!--android:id="@+id/movie_desc"-->
                <!--style="@style/TextAppearance.AppCompat.Caption"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/activity_margin_content"-->
                <!--android:layout_marginStart="@dimen/activity_margin_content"-->
                <!--android:layout_marginTop="@dimen/activity_margin_half"-->
                <!--android:ellipsize="end"-->
                <!--android:maxLines="2"-->
                <!--android:textColor="@color/black"-->
                <!--tools:text="Nowadays, user engagement is considered one of the most important metrics for the success of your app" />-->

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:padding="@dimen/size_5dp">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/button_background_fill"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingTop="@dimen/size_5dp"
                android:text="Accept"
                android:textSize="@dimen/text_size17" />

            <TextView
                android:textColor="@color/white"
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_background_fill"
                android:paddingBottom="@dimen/size_5dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingTop="@dimen/size_5dp"
                android:text="Reject"
                android:textSize="@dimen/text_size17" />

        </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>